<h1>Enter a transaction</h1>
<div>
  <p>Amount left to save: $xxxx</p>
  <%= form_for(@transaction) do |t| %>

    <%= t.label 'Transaction amount' %>
    <%= t.number_field :transaction_amount, class: 'form-control' %> 

    <%= t.label 'Transaction date' %>
    <%= t.date_field :transaction_date, class: 'form-control' %>

    <%= t.label 'Add a note' %>
    <%= t.text_field :note, class: 'form-control' %>

    <%= t.label 'Budget id' %>
    <%= t.text_field :budget_id, class: 'form-control' %>

    <%= t.submit 'Save transaction', class: 'btn btn-primary' %>
  <% end %>
</div>
