<h1>Create an account</h1>

<%#add divs here for more styling%>
<%= form_for(@user) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  </br>
  <%= f.label :email %>
  <%= f.email_field :email %>
  </br>
  <%= f.label :password %>
  <%= f.password_field :password %>
  </br>
  <%= f.label :password_confirmation, "Confirmation" %>
  <%= f.password_field :password_confirmation %>
  </br>
  <%= f.submit "Come on in" %>
<% end %>
